@model Answer


<h2>Edit Answer</h2>

<form asp-action="EditAns" asp-controller="post" method="post">
    <div class="form-group">
        <textarea asp-for="Body" class="form-control" name ="AnsBody">@Model.Body</textarea>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" name="Id"/>
    <input type="submit" value="Save" class="btn btn-primary" />
</form>
